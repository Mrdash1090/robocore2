<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.view.menu.ListMenuItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subject_status"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Subjects and percent of classes bunked :"
        android:textSize="20sp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/subject_status_name"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="subject 1"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="viewEnd"
            android:text="50%"
            android:textSize="30sp"/>


    </LinearLayout>

</android.support.v7.view.menu.ListMenuItemView>